<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MiNegocio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.MiNegocio.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MiNegocio.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MiNegocio.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Cambia el color de un AlertDialog-->
    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Cambia el fondo del AlertDialog -->
        <item name="android:windowBackground">@color/background_claro</item>
        <!-- Cambia el color de los botones "SÃ­" y "No" -->
        <item name="colorAccent">@color/color_primary</item>
        <!-- Cambia el color del texto del mensaje -->
        <item name="android:colorPrimary">@color/white</item>
    </style>

</resources>